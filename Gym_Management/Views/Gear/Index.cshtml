@model IEnumerable<Gym_Management.Models.Management.Gear>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole(Gym_Management.Constants.Roles.Admin))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table id="gear" class="styled-table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GearType)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr class="active-row">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GearType)
            </td>
            <td>
                @if (User.IsInRole(Gym_Management.Constants.Roles.Admin))
                {
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    <i class="fa fa-search" aria-hidden="true"></i>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                else
                {
                    <i class="fa fa-search" aria-hidden="true"></i>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>
@section scripts {
    <script>
        $(document).ready(function () {
            $("#gear").DataTable();

        });
    </script>
}