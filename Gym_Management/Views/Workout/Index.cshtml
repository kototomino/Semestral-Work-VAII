@model IEnumerable<Gym_Management.Models.Management.Workout>

@{
    ViewBag.Title = "Workouts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>

    @if (User.IsInRole(Gym_Management.Constants.Roles.Admin))
    {
        <i class="fa fa-plus" aria-hidden="true"></i>
        @Html.ActionLink("Create New", "Create", "Workout", new { @class = "styled-action-link-button" })
    }
</p>
<table id="workout" class="styled-table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>
            <th>
                @Html.DisplayName("Customers")
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr class="active-row">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach.Name)
            </td>
            <td>
                @if (item.Customer_Workouts != null)
                {
                    foreach (var customer in item.Customer_Workouts)
                    {
                        @Html.DisplayFor(modelItem => customer.Customer.Name)
                    }
                }
            </td>
            <td>
                @if (User.IsInRole(Gym_Management.Constants.Roles.Admin))
                {
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    <i class="fa fa-search" aria-hidden="true"></i>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                else
                {
                    <i class="fa fa-plus" aria-hidden="true" &nbsp></i>
                    @Html.ActionLink("Sign in", "SignCustomer", new { id = item.Id })
                    <i class="fa fa-minus" aria-hidden="true" &nbsp></i>
                    @Html.ActionLink("Sign out", "SignOutCustomer", new { id = item.Id })
                    <i class="fa fa-search" aria-hidden="true" &nbsp></i>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                }
            </td>
        </tr>
    }

</table>
@section scripts {
    <script>
        $(document).ready(function () {
            $("#workout").DataTable();

        });
    </script>
}